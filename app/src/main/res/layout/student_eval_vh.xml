<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryLight"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/behavior_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/baseline_account_circle_black_48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/behavior_tv"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="behaviorEval" />

            <TextView
                android:id="@+id/comment_tv"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="commenasdhjfhjahdjahsdjhasjdhjhwajdhjashdjhwjhdhasdjhjdwdt" />
            <TextView
                android:id="@+id/date_tv"
                android:layout_gravity="end|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/19/2018"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>